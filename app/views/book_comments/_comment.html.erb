<table>
  <% book.book_comments.each do |book_comment| %>
    <tr>
      <td>
        <%= link_to(book_comment.user) do %>
        <%= image_tag book_comment.user.get_profile_image, size:"100x100" %><br>
        <%= book_comment.user.name %>
        <% end %>
      </td>
      <td><%= book_comment.comment %>
        <% if book_comment.user == current_user %>
      </td>
      <td>
        <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %></td>
        <% end %>
        <% end %>
    </tr>
</table>
<div>
  <%= form_with model: [book,book_comment], local: false do |f| %>
  <%= f.text_area :comment, rows: '5', cols: '96%' %><br>
  <%= f.submit "送信" %>
  <% end %>
</div>